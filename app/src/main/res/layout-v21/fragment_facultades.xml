<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccentDark">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/agronomia"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/agronomia"/>
            <Button
                android:id="@+id/arquitectura"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_marginTop="225dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/arquitectura" />
            <Button
                android:id="@+id/derecho"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_marginTop="446dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/derecho" />
            <Button
                android:id="@+id/economia"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_marginTop="667dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/economia"/>

            <Button
                android:id="@+id/humanidades"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="887dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/humanidades" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1757dp"/>


        </RelativeLayout>

    </ScrollView>
    <Button
        android:id="@+id/ir_home"
        android:layout_width="550dp"
        android:layout_height="70dp"
        android:layout_marginStart="265dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="25dp"
        android:drawableRight="@drawable/ic_volver_home"
        android:background="@drawable/edittext_rounded_fav3"
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
</RelativeLayout>