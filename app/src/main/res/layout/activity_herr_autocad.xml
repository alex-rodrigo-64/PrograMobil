<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentDark"
    android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorAccentDark"
        android:background="@color/colorAccentDark"
        android:elevation="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:background="@drawable/edittext_rounded_fav2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:id="@+id/post_image1r"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_title1r"
                android:text="POST TITLE"
                android:textColor="#ffff"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_precio1r"
                android:text="POST PRECIO"
                android:textColor="#ffff"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/fav1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:drawableBottom="@drawable/ic_descripcion"
                android:background="@drawable/edittext_rounded_fav3"/>
            <Button
                android:id="@+id/share1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="135dp"
                android:drawableBottom="@drawable/ic_favoritos"
                android:background="@drawable/edittext_rounded_fav3"
                />
            <Button
                android:id="@+id/send1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="240dp"
                android:drawableBottom="@drawable/ic_compartir_todos"
                android:background="@drawable/edittext_rounded_fav3"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>